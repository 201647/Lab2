<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>

<BorderPane prefHeight="295.0" prefWidth="278.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.spellchecker.controller.SpellCheckerController">
   <top>
      <Label text="Lab2_SpellChecker" textFill="#206f2c" BorderPane.alignment="CENTER">
         <font>
            <Font size="16.0" />
         </font></Label>
   </top>
   <center>
      <VBox prefHeight="258.0" prefWidth="278.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="41.0" prefWidth="278.0">
               <children>
                  <Label text="Choose the language:" />
                  <ComboBox fx:id="tendinaLingue" translateX="10.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextArea fx:id="txtArea1" prefHeight="65.0" prefWidth="253.0" />
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" prefHeight="32.0" prefWidth="278.0">
               <children>
                  <Button fx:id="SpellCheck" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#DoSpellCheck" text="SpellCheck" />
               </children></HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextFlow fx:id="txtflow" prefHeight="77.0" prefWidth="251.0" />
               </children></HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="38.0" prefWidth="276.0">
               <children>
                  <TextField fx:id="txtErrori" />
                  <Button fx:id="ClearText" mnemonicParsing="false" onAction="#DoClearText" text="ClearText" />
               </children></HBox>
            <HBox alignment="BOTTOM_LEFT" prefHeight="64.0" prefWidth="201.0">
               <children>
                  <TextField fx:id="txtTempo" prefHeight="25.0" prefWidth="221.0" />
               </children></HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
